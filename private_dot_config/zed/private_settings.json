{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "provider": {
      "name": "openai",
      "default_model": "gpt-4o"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": false,

  "theme": {
    "mode": "system",
    "light": "Atelier Dune Light",
    "dark": "Gruvbox Dark Soft"
  },
  "cursor_blink": false,
  "buffer_font_family": "Berkeley Nerd",
  "buffer_font_size": 12,
  "ui_font_size": 12,

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_multiline_find": true
  },
  "relative_line_numbers": true,
  "preferred_line_length": 80,

  "confirm_quit": true,
  "autosave": "off",
  "scrollbar": { "show": "never" },
  "vertical_scroll_margin": 0,

  "preview_tabs": {
    "enabled": false
  },
  "inline_completions": {
    "disabled_globs": [".env", ".gitignore", ".next"]
  },
  "journal": {
    "path": "~/.config"
  }
}
